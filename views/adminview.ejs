<% include ./partials/header %>
<!-- navbar -->
<br />
<div class="container">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">NameCom</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- <strong>Add Course</strong> -->
    <!-- <span style="width: 750px;"></span> -->
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto" style="float:right;">
        <li class="nav-item active">
          <a class="nav-link" href="/users/logout"
            ><strong>LogOut</strong><span class="sr-only"></span
          ></a>
        </li>
        <% if(user.role =="Admin"){ %>
        <li class="nav-item active">
          <a class="nav-link" href="/course/form"
            ><strong>Add Course</strong><span class="sr-only"></span
          ></a>
        </li>
        <% } %>
      </ul>
    </div>
  </nav>
</div>

<br />

<!-- <a class="btn btn-primary" href="/course/form" role="button">Add Course</a> -->

<div class="container">
  <div class="row">
    <div class="col-sm-9">
      <% courses.forEach((course) => { %>
      <div class="card">
        <div class="row">
          <div class="col-lg-4">
            <img
              src="<%= course.imageUrl %>"
              class="card-img-top"
              alt="..."
              style="width:100%"
            />
          </div>
          <div class="col-sm-8">
            <div class="card-body">
              <h5 class="card-title"><strong><%= course.name %></strong></h5>
              <p class="card-text">
                <strong>Category: </strong> <%= course.category %>
              </p>
              <p class="card-text">
                <strong>Instructor Name: </strong> <%= course.instructor %>
              </p>
              <a href="#" class="btn btn-success" style="margin-right: 40px;"
                ><strong>Enroll Now</strong></a
              >
              <% if(user.role == "Admin"){ %>
              <a
                href="/course/<%= course._id %>/delete"
                class="btn btn-danger"
                style="margin-right: 40px;"
                ><strong>Delete</strong></a
              >
              <a
                href="/course/<%= course._id %>/edit"
                class="btn btn-warning"
                style="margin-right: 40px;"
                ><strong>Edit</strong></a
              >
              <% } %>
            </div>
          </div>
        </div>
      </div>
      <br />
      <% }) %>
    </div>
    <div class="col-sm-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Other Cards</h5>
          <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
          <p class="card-text">
            Some quick example text to build on the card title and make up the
            bulk of the card's content.
          </p>
          <a href="#" class="card-link">Card link</a>
          <a href="#" class="card-link">Another link</a>
        </div>
      </div>
    </div>
  </div>
</div>
