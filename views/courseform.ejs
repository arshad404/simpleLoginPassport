<% include ./partials/header %>
<br><br>
<div class="container">
    <div class="row mt-4">
        <div class="col-md-5 pt-4">
            <img src="/images/undraw_working_remotely_jh40.svg" alt="" width="100%">
        </div>
        <div class="col-md-7">
            <h2 style="margin-bottom: 16px; font-weight:700;">Add Course Information</h2>
            <% if(data) { %>
                <form action="/course/<%=data._id%>/edit" method="post">
                    <% } else { %>
            <form class="" action="/course/form" method="post">
                <% } %>
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%=data.name%>" placeholder="Course Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="category" value="<%=data.category%>" placeholder="Category Of Course">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="imageUrl" value="<%=data.imageUrl%>" placeholder="imageUrl">
                </div>
                <!-- <div class="form-group">
                    <input class="form-control" type="text" name="about" value="" placeholder="About the Course">
                </div> -->
                <div class="form-group">
                    <input class="form-control" type="text" name="instructor" value="<%=data.instructor%>" placeholder="Instructor Name">
                </div>
                <div class=form-group>
                    <input type="submit" class="btn btn-lg btn-primary btn-block" name="" value="submit"
                        placeholder="submit">
                </div>
            </form>
            <a href="/users/admin">GO BACK</a>
        </div>
    </div>  
</div>

<% include ./partials/footer %>
